<h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">新規作成</h2>
  <%= form_with model: @user, class: "max-w-lg border rounded-lg mx-auto", local: true do |f| %>
    <div class="flex flex-col gap-4 p-4 md:p-8">
      <div class="flex justify-center">
        <%= link_to 'ゲストログイン', '/guest_login', method: :post, class: "bg-yellow-500 hover:bg-yellow-700 text-white rounded-full py-1 md:py-2 px-4 md:px-6 font-bold text-base md:text-lg" %>  
      </div>
    <%= render 'shared/error_messages', object: f.object %>
      <div>
        <%= f.label :name, class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
        <%= f.text_field :name, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" %>
      </div>
      <div>
        <%= f.label :email, class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
        <%= f.text_field :email, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2", type: 'email' %>
      </div>

      <div>
        <%= f.label :password, class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
        <%= f.text_field :password, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" , type: 'password' %>
      </div>
      <div>
        <%= f.label :password_confirmation, class: "inline-block text-gray-800 text-sm sm:text-base mb-2" %>
        <%= f.text_field :password_confirmation, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2" , type: 'password' %>
      </div>
      <div class="flex justify-center">
        <a class="mt-4 px-6 py-2 bg-red-500 text-white rounded-full hover:bg-red-700 transition duration-200">
          <%= f.submit "Create User" %>
        </a>
      </div>
    </div>
  <% end %>
</div>