<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password, type: 'password' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
